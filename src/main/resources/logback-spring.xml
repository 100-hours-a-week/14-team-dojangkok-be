<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">

    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <springProfile name="local">
        <property name="LOG_PATH" value="logs"/>
        <property name="LOG_LEVEL" value="DEBUG"/>
    </springProfile>

    <springProfile name="dev">
        <property name="LOG_PATH" value="/var/log/dojangkok"/>
        <property name="LOG_LEVEL" value="INFO"/>
    </springProfile>

    <springProfile name="local">
        <appender name="CONSOLE_PATTERN" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="dev">
        <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <customFields>{"app":"dojangkok-backend","env":"${spring.profiles.active:-local}"}</customFields>
            </encoder>
        </appender>
    </springProfile>

    <springProfile name="local,dev">
        <appender name="FILE"
                  class="ch.qos.logback.core.rolling.RollingFileAppender">

            <file>${LOG_PATH}/${spring.profiles.active}/application.log</file>

            <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>
                    ${LOG_PATH}/${spring.profiles.active}/application-%d{yyyy-MM-dd}.log
                </fileNamePattern>

                <maxHistory>30</maxHistory>

                <totalSizeCap>3GB</totalSizeCap>
            </rollingPolicy>

            <encoder>
                <pattern>${LOG_PATTERN}</pattern>
            </encoder>
        </appender>
    </springProfile>


    <springProfile name="local">
        <root level="${LOG_LEVEL}">
            <appender-ref ref="CONSOLE_PATTERN"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>

    <springProfile name="dev">
        <root level="${LOG_LEVEL}">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
</configuration>
